{
    "name": "Anki Web Reader",
    "version": "1.0",
    "description": "Replace words with translations you've learnt while browsing the web",
    "permissions": [
      "http://localhost/"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {}
    },
    "icons": {},
    "options_page": "options.html", 
    "manifest_version": 2
  }